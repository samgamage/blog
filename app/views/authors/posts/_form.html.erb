<%= form_for(post, url: url) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">


      <div class="card">
        <div class="card-block">

          <%= link_to authors_posts_path, title: 'Go back', class: 'link-back' do %>
            <img class="icon icons8-Left-Filled" width="28" height="28" src="data:image/png;base64,">
          <% end %>

          <div class="actions">
            <% if @post.persisted? %>
              <%= f.submit "Save blog post", class: 'btn-edit-new' %>
            <% else %>
              <%= f.submit "Create blog post", class: 'btn-edit-new' %>
            <% end %>
            <% if @post.persisted? %>
              <%= link_to @post, title: 'Show post', class: 'link-show' do %>
                <img class="icon icons8-Eye" width="28" height="28" src="data:image/png;base64,">
              <% end %>
            <% end %>
          </div>


          <% if @post.new_record? %>
            <h4 class="card-title">New post</h4>
          <% else %>
            <h4 class="card-title">
              <b>Edit</b>
              <span class="thin-text">"<%= @post.title %>"</span>
            </h4>
          <% end %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="field">
              <%= f.label :title, class: 'source-sans-pro label-title' %>
              <%= f.text_field :title, class: 'form-control form-title source-sans-pro', placeholder: 'Title' %>
              <%= f.label :banner_image_url, class: 'source-sans-pro label-banner' %>
              <%= f.text_field :banner_image_url, class: 'form-control form-banner source-sans-pro', placeholder: 'Ex: www.imgur.com/wEmkEr.png' %>
            </div>
          </li>
          <li class="list-group-item" style="border-top: none;">
            <div class="field">
              <%= f.label :description, class: 'source-sans-pro label-desc' %>
              <%= f.text_area :description, class: 'form-control form-desc source-sans-pro', placeholder: 'Description' %>
              <%= f.label 'Tags', class: 'source-sans-pro label-tag' %>
              <%= f.text_area :tag_list, class: 'form-control form-tag source-sans-pro', placeholder: 'Ex: Nature, Colors, Earth' %>
            </div>
          </li>
        </ul>
      </div>

      <div class="field">
        <%= f.text_area :body, id: :post_body %>
      </div>

  </div>
</div>
  
  
<% end %>
