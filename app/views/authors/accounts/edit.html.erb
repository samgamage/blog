<div class="row">
  <!-- Basic info section -->
    <%= form_tag authors_info_path, method: :put do %>
      <%= fields_for :author do |f| %>
        <div class="col-md-6">
          <div class="card">
            <div class="card-block">
              <div class="card-title">
                <h4>Basic info</h4>
              </div>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <label style="float: left; width: 100%;">Gravatar Image</label>
                <%= image_tag(current_author.gravatar_image_url, class: 'account-icon') %>
              </li>
              <li class="list-group-item">
                <div class="field">
                  <%= f.label :name %>
                  <%= f.text_field :name, value: current_author.name, class: 'form-control source-sans-pro' %>
                </div>
              </li>
              <li class="list-group-item">
                <div class="field">
                  <%= f.label :email %>
                  <%= f.text_field :email, value: current_author.email, class: 'form-control source-sans-pro' %>
                </div>
              </li>
              <li class="list-group-item">
                <div class="field">
                  <%= f.label :bio %>
                  <%= f.text_area :bio, value: current_author.bio, class: 'form-control source-sans-pro' %>
                </div>
              </li>
              <li class="list-group-item">
                <%= f.submit "Update info", class: 'btn-account' %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    <% end %>
    <!-- Change password section -->
    <%= form_tag authors_change_password_path, method: :put do %>
      <%= fields_for :author do |f| %>
        <div class="col-md-6">
          <div class="card">
            <div class="card-block">
              <div class="card-title">
                <h4>Change Password</h4>
              </div>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <div class="field">
                  <%= f.label :current_password %>
                  <%= f.password_field :current_password, class: 'form-control source-sans-pro' %>
                </div>
              </li>
              <li class="list-group-item">
                <div class="field">
                  <%= f.label :new_password %>
                  <%= f.password_field :new_password, class: 'form-control source-sans-pro' %>
                </div>
              </li>
              <li class="list-group-item">
                <div class="field">
                  <%= f.label :new_password_confirmation %>
                  <%= f.password_field :new_password_confirmation, class: 'form-control source-sans-pro' %>
                </div>
              </li>
              <li class="list-group-item">
                <%= f.submit "Change password", class: 'btn-account' %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

