<div class="container" style="width: 520px;">
  <div class="sign-up">
    <h1>Sign up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: 'source-sans-pro' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control source-sans-pro' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'source-sans-pro', style: 'margin-top: 8px;' %>
        <% if @minimum_password_length %>
        <em class="source-sans-pro">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control source-sans-pro' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'source-sans-pro', style: 'margin-top: 8px;' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control source-sans-pro' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn-signup' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
