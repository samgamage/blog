<div class="container" style="width: 520px;">
  <div class="log-in">
    <h1>Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :email, class: 'source-sans-pro' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control source-sans-pro' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'source-sans-pro', style: 'margin-top: 8px;' %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control source-sans-pro' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field" style="margin-top: 8px;">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'source-sans-pro' %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn-login' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
